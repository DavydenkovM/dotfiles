[user]
  email = davydenkov.mihail@gmail.com
  name = Davydenkov Mihail
[color]
  ui = auto
[alias]
  d = difftool
  c- = checkout -
  ca = commit --amend
  ci = commit
  co = checkout
  d = difftool
  lo = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  p = push
  sp = stash pop
  ss = stash save
  st = status
  up = pull --rebase
[core]
  pager = less -x4
  editor = vim
  excludesfile = ~/dotfiles/git/.gitignore_global
  autocrlf = input
[init]
  templatedir = ~/dotfiles/git/git_template
[diff]
  tool = icdiff
[difftool]
  prompt = false
[difftool "icdiff"]
  cmd = icdiff --highlight --line-numbers --numlines=3 $LOCAL $REMOTE 
[push]
  default = current
[merge]
  tool = vimdiff
